type User {
  id: ID! @id
  avatar: String!
  username: String!
  country: String!
  city: String!
  sentNotes: [Note]! @relation(link: TABLE, name: "SentNote")
  favoriteNotes: [Note]! @relation(link: TABLE, name: "FavoriteNote")
  interests: [Interest!]! @relation(link: TABLE)
}

type Note {
  id: ID! @id
  createdAt: DateTime! @createdAt
  message: String!
  owner: User! @relation(link: TABLE, name: "NoteOwner")
  seenBy: [User]! @relation(link: TABLE, name: "NoteViewer")
  topic: [Interest!]! @relation(link: TABLE)
  fontFamily: String!
  fontColor: String!
  backgroundColor: String!
}

type Interest {
  id: ID! @id
  title: String!
}
